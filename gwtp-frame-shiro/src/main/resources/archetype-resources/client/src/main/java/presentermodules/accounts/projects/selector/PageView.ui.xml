<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'
 xmlns:m='urn:import:gwt.material.design.client.ui'>
<ui:style gss="true">
@external search-result;
@def CELLWIDTH 160px;
.container {width: 100%; height: 100%; box-sizing: border-box; position: fixed;}
.center-container {width: mult(CELLWIDTH, 5); margin: 0 auto;}
.slot-container {z-index: 100; display: block; overflow-y: hidden; position: relative; height: 100%; margin: 2px 0; }
.blur-container {position: fixed; z-index: 200; width: 100%; height: 30px; /* backdrop-filter: blur(1px); */
 background: linear-gradient(to bottom, rgba(200, 200, 200, 0.5), transparent)
}
/* hacker */.search-container .search-result {display: none;}
</ui:style>
 
<g:HTMLPanel styleName="{style.container}">
 <m:MaterialNavBar ui:field="navBar" backgroundColor='TRANSPARENT' shadow='0' styleName="{style.center-container}">
  <m:MaterialLink ui:field='lnkGoback' textColor='BLUE' iconType="ARROW_BACK"/>
  <m:MaterialNavBrand textColor='BLUE' text="选择项目" />
  <m:MaterialLink ui:field="btnSearch" iconType="SEARCH" iconColor="BLUE" float="RIGHT"/>
 </m:MaterialNavBar>
 <!-- NavBar Search -->
 <m:MaterialNavBar ui:field="navBarSearch" visible="false" backgroundColor='TRANSPARENT' shadow='0' textColor='BLUE' styleName="{style.center-container}">
  <m:MaterialSearch ui:field="txtSearch" placeholder="输入查询关键字" backgroundColor="TRANSPARENT" textColor='BLUE' iconColor="BLUE" shadow="0" styleName="{style.search-container}"/>
 </m:MaterialNavBar> 
<g:HTMLPanel styleName='{style.blur-container}'/>
<g:HTMLPanel ui:field='slot' styleName='{style.slot-container}'/>
</g:HTMLPanel>
</ui:UiBinder>