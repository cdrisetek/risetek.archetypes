<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'
 xmlns:m='urn:import:gwt.material.design.client.ui'
 xmlns:ma='urn:import:gwt.material.design.addins.client'>
<ui:style gss="true">
@def MAIN_COLOR eval("${package}.resource.Resources.getMainColor()");
@def COLOR_TONE eval("${package}.resource.Resources.getToneColor()");
@def BOX_SHADOW eval("${package}.resource.Resources.getBoxShadow()");
@def CELL_WIDTH 160px; 
@def MAX_WIDTH mult(CELL_WIDTH, 8);
@def MIN_WIDTH mult(CELL_WIDTH, 4);

 .container, .toolbar-container, .toolbar-dock, .toolbar-shadow {
  width:    100%;
  height:   100%;
  box-sizing: border-box;
 }

 .toolbar-container {
   font-weight: bold;
   padding: 5px;
   overflow: hidden;
 }

 .toolbar-shadow {
   max-width: MAX_WIDTH;
   min-width: MIN_WIDTH;
   box-shadow: BOX_SHADOW;
   border-radius: 2px;
   margin: 0px auto;
 }

 .toolbar-dock {
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
 }

 .toolbar-tool-container {
  margin:  auto 30px;
  height:  64px;
  line-height: 64px;
  align-items: center;
 } 

 .toolbar-search-container {
  width: 40%;
  min-width: mult(CELL_WIDTH, 2);
  z-index: 0;
 } 
</ui:style>
 
<g:HTMLPanel styleName="{style.container}">
 <g:DockLayoutPanel unit="PX" styleName="{style.container}">
  <g:north size="100">
   <g:HTMLPanel styleName="{style.toolbar-container}">
    <div class="{style.toolbar-shadow}">
     <div class="{style.toolbar-dock}">
      <div class="{style.toolbar-tool-container} {style.toolbar-search-container}">
       <m:MaterialNavBar ui:field="navBarSearch" width="100%" visible="true">
        <m:MaterialSearch ui:field="searchinput" placeholder="搜索过滤" active="true" shadow="1"/>
       </m:MaterialNavBar>
      </div>
      <div class="{style.toolbar-tool-container}">
       <m:MaterialButton text="新添项目" waves="LIGHT" textColor="WHITE" iconType="GROUP_ADD"
                         size="LARGE" iconPosition="LEFT" ui:field="btnCreate"/>
      </div>
     </div>
    </div>
   </g:HTMLPanel>
  </g:north>
  <g:center>
   <g:HTMLPanel ui:field="dataDisplayPanel" />
  </g:center>
 </g:DockLayoutPanel>
</g:HTMLPanel>
</ui:UiBinder>