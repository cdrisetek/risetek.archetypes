<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'
 xmlns:ma='urn:import:gwt.material.design.addins.client'
 xmlns:m='urn:import:gwt.material.design.client.ui'>
<ui:style gss="true">
@external card-action row material-label material-icons;
@def CELL_WIDTH 160px;
.container {width: mult(CELL_WIDTH, 5); margin: 0 auto;}
.card-slot .card-action {background: rgba(160,160,160,0.05);}
.card-slot .card-action button {font-size: 1.2rem;}
.card-slot .card-action .row {margin-bottom: 0px;}
.card-slot .material-label {margin: 10px 20px;}
</ui:style>

<m:MaterialCard styleName='{style.card-slot}'>
 <m:MaterialCardContent>
  <m:MaterialCardTitle text="设置" textColor='BLUE' iconType="PEOPLE" iconPosition="RIGHT"/>
  <m:MaterialLabel text="用户需要拥有账户才能使用，账户拥有的权限由角色授予，您可以创建一个账户，并邀请用户使用。"/>
  <m:MaterialTextBox placeholder="项目" ui:field="name" iconType="PERSON" type="TEXT" readOnly="true"
                       maxLength="30"/>
  <m:MaterialLabel text="项目注释是可选的，请简短明确描述。注释包含在项目搜索的关键字中。"/>
  <m:MaterialTextBox placeholder="备注" ui:field="notes" iconType="NOTE" type="TEXT"
                       maxLength="200"/>
 </m:MaterialCardContent>
 <m:MaterialRow>
    <m:MaterialButton margin="8" text="启用项目" waves="LIGHT" textColor="WHITE"
                      iconType="SENTIMENT_SATISFIED" iconPosition="LEFT" ui:field="btnEnable"/>
    <m:MaterialButton margin="8" text="停用项目" waves="LIGHT" textColor="WHITE"
                      iconType="SENTIMENT_DISSATISFIED" iconPosition="LEFT" ui:field="btnDisable"/>
 </m:MaterialRow>
 <m:MaterialCardAction>
  <m:MaterialRow>
  <m:MaterialButton margin="8" text="确定更新" waves="LIGHT" textColor="WHITE" iconType="ARROW_FORWARD"
                    float="RIGHT" size="LARGE" iconPosition="RIGHT" ui:field="btnCommit"/>
  </m:MaterialRow>
 </m:MaterialCardAction>
</m:MaterialCard>
</ui:UiBinder>