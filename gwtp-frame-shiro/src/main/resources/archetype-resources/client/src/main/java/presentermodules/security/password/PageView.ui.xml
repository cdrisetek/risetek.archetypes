<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:s='urn:import:${package}.presentermodules.security.ui'>

<ui:style gss="true">
@def CONTENT_WIDTH  660px;

.maintanceContainer {
min-height: 100%;
width: 100%;
height: auto;
position: relative;
overflow: visible;
-webkit-font-smoothing: antialiased;
margin: 0;
-webkit-text-size-adjust: 100%;
text-size-adjust: 100%;
}

.contentContainer {
margin: auto;
max-width: CONTENT_WIDTH;
}

.notedescription {
font: caption;
padding: 12px;
}

.cardcontextpad { padding: 24px; }

.boxIconInline {
display: -webkit-box;
display: -moz-box;
display: -ms-flexbox;
display: -webkit-flex;
display: flex;
-webkit-box-align: center;
box-align: center;
-webkit-align-items: center;
align-items: center;
}

.boxflexgrow {
-webkit-box-flex: 1;
box-flex: 1;
-webkit-flex-grow: 1;
flex-grow: 1;
-webkit-flex-shrink: 1;
flex-shrink: 1;
font-size: 17px;
min-width: 0;
}

.boxofwrap {
overflow-wrap: break-word;
}

.clearfocus {
}
</ui:style>
	
<!--  password maintance view -->
<g:HTMLPanel>
<m:MaterialIcon iconType="VISIBILITY" iconColor="BLUE" circle="true" ui:field="passwordspy1open"/>
<m:MaterialIcon iconType="VISIBILITY_OFF" iconColor="BLUE" circle="true" ui:field="passwordspy1close"/>
<m:MaterialIcon iconType="VISIBILITY" iconColor="BLUE" circle="true" ui:field="passwordspy2open"/>
<m:MaterialIcon iconType="VISIBILITY_OFF" iconColor="BLUE" circle="true" ui:field="passwordspy2close"/>

<g:HTMLPanel styleName='{style.maintanceContainer}' ui:field="passwordMaintance">
 <s:TitlePanel ui:field='passwordtitle' title='密码' />
		
 <div role='main'>
  <c-wiz>
   <div class='{style.contentContainer}'>
    <div class='{style.notedescription}'>请选择安全系数高的密码。</div>
    <div class='{style.notedescription}'>更改密码将会使您退出自己的设备。您重新登录时需要输入新密码。</div>
   </div>

   <m:MaterialCard padding="24" styleName="{style.contentContainer}">
    <m:MaterialCardContent textColor="LIGHT_BLUE">
     <g:HTMLPanel styleName="{style.cardcontextpad}">
      <div class='{style.boxIconInline}'>
       <div class='{style.boxflexgrow}'>
        <span class='{style.boxofwrap}'>
         <m:MaterialTextBox label="新密码" ui:field="password1" type="PASSWORD" fieldType="DEFAULT" maxLength="30"/>
        </span>
       </div>
							
       <g:FocusPanel styleName="{style.clearfocus}" ui:field="passwordspy1"/>
      </div>

     <div class='{style.notedescription}'>密码强度</div>
     <div class='{style.notedescription}'>不要使用很容易被猜到的密码，也不要使用您用于登录其他网站的密码。</div>

     <div class='{style.boxIconInline}'>
      <div class='{style.boxflexgrow}'>
       <span class='{style.boxofwrap}'>
        <m:MaterialTextBox label="确认新密码" ui:field="password2" type="PASSWORD" fieldType="DEFAULT" maxLength="30"/>
       </span>
      </div>
							
      <g:FocusPanel styleName="{style.clearfocus}" ui:field="passwordspy2"/>
     </div>
					
     <m:MaterialButton margin="24" text="更改密码" textColor="WHITE" ui:field="passwordButton" />
    </g:HTMLPanel>
   </m:MaterialCardContent>
  </m:MaterialCard>
  </c-wiz>
 </div>
</g:HTMLPanel>
</g:HTMLPanel>
</ui:UiBinder>