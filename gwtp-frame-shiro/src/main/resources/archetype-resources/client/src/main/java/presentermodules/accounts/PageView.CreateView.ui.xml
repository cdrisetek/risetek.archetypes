<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'
 xmlns:ma='urn:import:gwt.material.design.addins.client'
 xmlns:m='urn:import:gwt.material.design.client.ui'>
<ui:style gss="true">
@external card-action row material-label material-icons;
.card-slot .card-action {background: rgba(160,160,160,0.05);}
.card-slot .card-action button {font-size: 1.2rem;}
.card-slot .card-action .row {margin-bottom: 0px;}
.card-slot .material-label {margin: 10px 20px;}
.ui-field {margin: 30px 40px 0 40px; min-width: 320px;}
.ui-hidden-icons {display: none;}
.ui-account-validate {position: absolute; right: 0; top: 0; display: flex; color: blue;}
.ui-account-validate .material-icons {margin: auto;}
.box-rotate, .box-static {width: 100%; height: 100%; display: flex;}
.box-rotate {transform-origin: 50% 50%; animation: rotate 0.5s linear infinite;}
@keyframes rotate{0%{transform: rotate(0);} 100%{transform: rotate(360deg);}}
.box-section {border: 1px solid #C0C0C0; border-radius: 3px; margin: 0 0 10px 0;}
</ui:style>

<g:HTMLPanel>
<m:MaterialCard styleName='{style.card-slot}'>
 <m:MaterialCardContent margin="8">
  <m:MaterialCardTitle text="创建" textColor='BLUE' iconType="PEOPLE" iconPosition="RIGHT"/>
  <m:MaterialRow>
   <m:MaterialLabel text="用户需要拥有账户才能使用，账户拥有的权限由角色授予，您可以创建一个账户，并邀请用户使用。"/>
  </m:MaterialRow>
  <g:HTMLPanel styleName='{style.box-section}'>
   <m:MaterialLabel text="新建账户要求长度至少为4，并且不能与已经存在的账户同名。"/>
  <m:MaterialTextBox placeholder="账户" ui:field="name" styleName='{style.ui-field}' iconType="PERSON" type="TEXT" maxLength="30"/>
  </g:HTMLPanel>
  <g:HTMLPanel styleName='{style.box-section}'>
   <m:MaterialLabel text="密码长度不能小于4个字符。"/>
  <m:MaterialTextBox placeholder="密码" ui:field="password" styleName='{style.ui-field}' iconType="VPN_KEY" type="PASSWORD" maxLength="40"/>
  <m:MaterialTextBox placeholder="密码验证" ui:field="password2" styleName='{style.ui-field}' iconType="YOUTUBE_SEARCHED_FOR" type="PASSWORD" maxLength="40"/>
  </g:HTMLPanel>
  <m:MaterialTextBox placeholder="邮件" ui:field="email" styleName='{style.ui-field}' iconType="EMAIL" type="EMAIL" maxLength="40"/>
  <ma:inputmask.AbstractInputMask ui:field="telphone" styleName='{style.ui-field}' type="TEL" iconType="CALL"
                       fieldType="DEFAULT" placeholder="eg: 139-0000-0001"
                       mask="000-0000-0000" clearOnKeyUp="true"/>
  <m:MaterialTextBox placeholder="备注" ui:field="notes" styleName='{style.ui-field}' iconType="NOTE" type="TEXT" maxLength="200"/>
 </m:MaterialCardContent>
 <m:MaterialCardAction>
  <m:MaterialRow>
  <m:MaterialButton margin="8" text="确定添加" waves="LIGHT" textColor="WHITE" iconType="ARROW_FORWARD" enabled="false" 
                    float="RIGHT" size="LARGE" iconPosition="RIGHT" ui:field="btnCommit"/>
  </m:MaterialRow>
 </m:MaterialCardAction>
</m:MaterialCard>
<div class='{style.ui-hidden-icons}'>
 <g:HTMLPanel ui:field='boxValidate' styleName='{style.ui-account-validate}' />
 <g:HTMLPanel ui:field='iconChecking' styleName='{style.box-rotate}'><m:MaterialIcon iconType="REFRESH" /></g:HTMLPanel>
 <g:HTMLPanel ui:field='iconValidate' styleName='{style.box-static}'><m:MaterialIcon iconType="CHECK" iconColor="GREEN"/></g:HTMLPanel>
 <g:HTMLPanel ui:field='iconInvalidate' styleName='{style.box-static}'><m:MaterialIcon iconType="CLEAR" iconColor="RED"/></g:HTMLPanel>
</div>
</g:HTMLPanel>
</ui:UiBinder>