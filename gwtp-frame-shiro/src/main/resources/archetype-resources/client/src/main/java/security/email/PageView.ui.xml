<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:m='urn:import:com.risetek.security.ui'
	xmlns:icons="urn:import:com.risetek.utils.Icons">

	<ui:style gss="true">
	    @def COLOR_TONE                   #1a73e8;
	
		.pretty {
		min-height: 100%;
		width: 100%;
		height: auto;
		position: relative;
		background-color: #fff;
		color: rgba(0,0,0,0.87);
		font: 400 15px/20px Roboto,RobotoDraft,Helvetica,Arial,sans-serif;
		min-width: 320px;
		overflow: visible;
		-webkit-font-smoothing: antialiased;
		margin: 0;
		-webkit-text-size-adjust: 100%;
		text-size-adjust: 100%;
		}

		.main { margin: auto; max-width: 660px; }
		.mainDescript { padding: 24px 0; }

		.container {
		border: 1px solid #dadce0;
		border-radius: 8px;
		overflow: hidden;
		margin: 0 auto;
		max-width: 660px;
		background: #fff;
		}

		.container1 { padding: 24px; }

		.container2 {
		display: -webkit-box;
		display: -moz-box;
		display: -ms-flexbox;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		box-align: center;
		-webkit-align-items: center;
		align-items: center;
		}

		.context {
		-webkit-box-flex: 1;
		box-flex: 1;
		-webkit-flex-grow: 1;
		flex-grow: 1;
		-webkit-flex-shrink: 1;
		flex-shrink: 1;
		font-size: 17px;
		min-width: 0;
		}

		.context1 { overflow-wrap: break-word; }
		.context2 {
	      width: 100%;
          etter-spacing: .00625em;
          font-family: Roboto,Arial,sans-serif;
          font-size: 20px;
          font-weight: 400;
          line-height: 24px;
          -webkit-hyphens: auto;
          hyphens: auto;
          word-break: break-word;
          word-wrap: break-word;
	      overflow-wrap: break-word;
          color: #202124;
          border-top: 0px;
          border-left: 0px;
          border-right: 0px;
          padding: 5px;
          border-bottom: 1px solid COLOR_TONE;
		}
		.context2:focus {
          outline:none;
        }		

		.contextButton1 {
		-webkit-user-select: none;
		-webkit-transition: background .3s;
		transition: background .3s;
		border: 0;
		-webkit-border-radius: 50%;
		border-radius: 50%;
		cursor: pointer;
		display: inline-block;
		-webkit-flex-shrink: 0;
		flex-shrink: 0;
		height: 48px;
		outline: none;
		overflow: hidden;
		position: relative;
		text-align: center;
		-webkit-tap-highlight-color: transparent;
		width: 48px;
		z-index: 0;
		}
		
		.contextButton1:hover { background-color: rgba(0,0,0,.2); }
		.contextButton2 {
		color: rgba(0,0,0,0.54);
		fill: rgba(0,0,0,0.54);
		margin: 12px;
		}
		.contextButton3 {
		-webkit-box-flex: 0;
		box-flex: 0;
		-webkit-flex-grow: 0;
		flex-grow: 0;
		-webkit-flex-shrink: 0;
		flex-shrink: 0;
		}
	</ui:style>

	<g:HTMLPanel styleName='{style.pretty}'>
	    <m:TitlePanel ui:field='titlePanel' title='邮箱地址' />
		<div role='main'>
			<c-wiz>
				<div class='{style.main}'>
					<div class='{style.mainDescript}'>当我们检测到您的帐号中存在异常活动或者当您不慎无法访问自己的帐号时，我们会使用辅助邮箱与您联系。</div>
				</div>
				<div class='{style.container}'>
					<div class='{style.container1}'>
						<div class='{style.container2}'>
							<div class='{style.context}'>
								<span class='{style.context1}'>
									<g:TextBox styleName='{style.context2}' ui:field='textbox' />
								</span>
							</div>
							<g:HTMLPanel styleName='{style.contextButton1}' ui:field="commitButton">
								<div class='{style.contextButton2}'>
									<div class='{style.contextButton3}'>
										<g:HTMLPanel>
										<icons:Modify />
										</g:HTMLPanel>
									</div>
								</div>
							</g:HTMLPanel>
						</div>
					</div>
				</div>
			</c-wiz>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>