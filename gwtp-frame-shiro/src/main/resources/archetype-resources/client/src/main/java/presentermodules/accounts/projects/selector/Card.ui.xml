<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:r='urn:import:${package}.ui.infinitycard'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'>
<ui:style gss="true" src="../../selector.gss">
.card-name {
margin: 2px;
width: mult(CELLWIDTH, 2);
min-width: CELLWIDTH;
word-wrap: normal;
overflow: hidden;
}

.card-name::before {
content: "\9879\76ee:";
font-weight:bold;
margin-right: 10px;
font-size: 1.2em;
color: COLOR_TONE;
}
.card-note {
width: 100%;
min-width: mult(CELLWIDTH, 2);
margin: 2px;
word-wrap: normal;
overflow: hidden;
text-overflow: ellipsis;
-o-text-overflow: ellipsis;
}

.card-note::before {
content: "\5907\6ce8:";
font-weight:bold;
font-size: 1.2em;
margin-right: 10px;
color: COLOR_TONE;
}

@media only screen and (max-width: 800px) {
 .card-body { min-width: MIN_WIDTH; }
 .card-note { width: 100%; }
}
</ui:style>

<r:CardPanel ui:field="cardPanel" styleName="{style.card-container}">
<div class="{style.card-body}">
 <div class="{style.card-content}">
  <g:HTML styleName="{style.card-name}" ui:field="name" />
  <g:HTML styleName="{style.card-note}" ui:field="note" />
 </div>
</div>
</r:CardPanel>
</ui:UiBinder>