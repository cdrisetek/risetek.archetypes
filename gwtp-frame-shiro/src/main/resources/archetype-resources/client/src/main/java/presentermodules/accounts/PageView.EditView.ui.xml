<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
 xmlns:g='urn:import:com.google.gwt.user.client.ui'
 xmlns:ma='urn:import:gwt.material.design.addins.client'
 xmlns:m='urn:import:gwt.material.design.client.ui'>
<ui:style gss="true">
@external gwt-Button gwt-HTML card-action material-label;
@def CELL_WIDTH 160px;
.container {width: mult(CELL_WIDTH, 5); margin: 0 auto;}
.card-slot .material-label {margin: 10px 20px;}
.card-slot .card-action {background: rgba(160,160,160,0.05);}
.card-slot .card-action button {font-size: 1.2rem;}
.card-slot .card-action .row {margin-bottom: 0px;}
.ui-field {margin: 30px 40px 0 40px; min-width: 320px;}
</ui:style>

<m:MaterialCard styleName='{style.card-slot}'>
 <m:MaterialCardContent>
  <m:MaterialCardTitle text="更新" textColor='BLUE' iconType="PEOPLE" iconPosition="RIGHT"/>
  <m:MaterialLabel text="用户需要拥有账户才能使用，账户拥有的权限由角色授予，您可以创建一个账户，并邀请用户使用。"/>
  <m:MaterialTextBox placeholder="账户" ui:field="name" iconType="PERSON" type="TEXT" readOnly="true"
                     maxLength="30"/>

  <m:MaterialTextBox ui:field="email" placeholder="邮件" styleName='{style.ui-field}'
                     iconType="EMAIL" type="EMAIL" maxLength="40"/>
  <ma:inputmask.AbstractInputMask ui:field="telphone" styleName='{style.ui-field}' type="TEL"
                     iconType="CALL" fieldType="DEFAULT" placeholder="eg: 139-0000-0001"
                     mask="000-0000-0000" clearOnKeyUp="true"/>
  <m:MaterialTextBox ui:field="notes" placeholder="备注" styleName='{style.ui-field}'
                     iconType="NOTE" type="TEXT" maxLength="200"/>
 </m:MaterialCardContent>
  <m:MaterialRow styleName='{style.ui-field}'>
    <m:MaterialButton ui:field="btnEnable" margin="8" text="账户启用" waves="LIGHT" textColor="WHITE"
                      iconType="SENTIMENT_SATISFIED" iconPosition="LEFT"/>
    <m:MaterialButton ui:field="btnDisable" margin="8" text="账户停用" waves="LIGHT" textColor="WHITE"
                      iconType="SENTIMENT_DISSATISFIED" iconPosition="LEFT"/>
 </m:MaterialRow>
 <m:MaterialCardAction>
  <m:MaterialRow>
  <m:MaterialButton margin="8" text="确定更新" waves="LIGHT" textColor="WHITE" iconType="ARROW_FORWARD"
                    float="RIGHT" size="LARGE" iconPosition="RIGHT" ui:field="btnCommit"/>
  </m:MaterialRow>
 </m:MaterialCardAction>
</m:MaterialCard>
</ui:UiBinder>